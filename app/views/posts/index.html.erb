
<div>

   <div class=" d-flex mb-2 m-5 text-center" style="max-width: 1140px;">
        <div class="col-md-4">
          <img src="<%= @user.photo %>" class="img-fluid rounded-start" >
        </div>
        <div class="d-flex w-100 border p-4 justify-content-between align-items-end border-dark">
        <h2 class="pe-5"><%= @user.name  %> </h2>
        <span> Number of posts: <%= @user.orders  %> <span>
        </div>

  </div> <br>
        <% @user.recent_posts.each do |post| %>
       <div class="border mb-2 m-5 p-3 border-dark" style="max-width: 1140px;">
        Post: #<%= post.id %> <br> <br>
        <%= post.text %> <br>
        <div class="d-flex flex-row justify-content-end" > 
          <p class="m-0">Comments <%= post.comments_count%>,  
          Likes <%= post.likes_count%> </div> 
        </p> 
       </div>
          <div  class="border mb-2 m-5 mt-0 p-2 border-dark" style="max-width: 1140px;">
            <% post.recent_comments.each do |comment| %>
              <p><%= comment.author.name %>
              <%= comment.text %></p>
              <% end %>
        </div>
      <% end %>
  <div class="  mb-2 m-5 text-center" style="max-width: 1140px;">
    <div class="text-center ">
      <button type="button" class="text"> Pagination</button>
    </div>
  </div>

</div>